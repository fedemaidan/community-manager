{% extends '::base.html.twig' %}

{% block title %}Community Manager{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets '@CMSecurityBundle/Resources/public/css/login.css' %}
        <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
{% endblock %}

{% block body %}

    <form action="{{ path("login_check") }}" class="form-horizontal form-box" method="post" id="login">
        <fieldset>

            <div class="fields">
                <!-- Form Name -->
                <legend>Login</legend>
                {% if error %}
                    <div class="text-error">User Invalid</div>
                {% endif %}
                <!-- Text input-->
                <input id="username" name="_username" type="text" placeholder="Username" class="form-control input-lg" value="{{ last_username }}" required>
                <div class="user-icon"></div>
                <!-- Password input-->
                <input id="password" name="_password" type="password" placeholder="Password" class="form-control input-lg" required>
                <div class="pass-icon"></div>
            </div>
            <div class="footer">
                <button type="submit" class="btn btn-primary btn-large">Login</button>
            </div>
			<div class="footerRec">
            	<a href="{{ path("recoverPasswordPage") }}" class="btn btn-primary btn-large">Recuperar contrase√±a</a>
            </div>
        </fieldset>
    </form>
{% endblock %}